    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="@dimen/save_button_radius" android:bottomRightRadius="@dimen/save_button_radius" android:topLeftRadius="@dimen/save_button_radius" android:topRightRadius="@dimen/save_button_radius" />
        </shape>
    </item>
</selector>