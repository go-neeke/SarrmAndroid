<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.android.sarrm.view.activities.SplashActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_logo_height"
            android:src="@drawable/img_logo_sarrm" />

        <ImageView
            android:id="@+id/textLogo"
            android:layout_width="@dimen/top_logo_width"
            android:layout_height="@dimen/top_logo_height"
            android:layout_below="@id/imgLogo"
            android:layout_centerInParent="true"
            android:src="@drawable/text_logo_sarrm" />
    </RelativeLayout>

</RelativeLayout>
