<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview_child="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="3dp"
    cardview_child:cardBackgroundColor="#ffd54f"
    cardview_child:cardCornerRadius="4dp"
    cardview_child:cardElevation="3dp"
    cardview_child:contentPadding="2dp">

    <TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#448aff"
        android:textSize="18sp" />

</com.google.android.material.card.MaterialCardView>